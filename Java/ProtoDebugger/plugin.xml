<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Protocol Buffer"
            id="ProtoDebugger">
      </category>
      <view
            category="ProtoDebugger"
            class="protodebugger.views.ProtoCacheViewer"
            id="protodebugger.views.ProtoCacheViewer"
            name="ProtoViewer">
      </view>
      <view
            category="ProtoDebugger"
            class="protodebugger.views.EditorTree"
            id="protodebugger.views.ProtoEditorTree"
            name="EditorTree"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="left"
               id="protodebugger.views.ProtoViewer">
         </view>
         <view
               id="protodebugger.views.ProtoEditorTree"
               minimized="false"
               relationship="right"
               relative="protodebugger.views.ProtoViewer">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         id="toolbar:protodebugger.views.ProtoEditorTree"
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="toolbar:protodebugger.views.ProtoEditorTree">
         <command
               commandId="protodebugger.commands.Build"
               id="protodebugger.views.ProtoEditorTree.Toolbar.Build"
               label="Build"
               style="push"
               tooltip="Builds the current proto file">
         </command>
         <command
               commandId="protodebugger.commands.SaveProtoInstance"
               label="Save"
               style="push"
               tooltip="Saves the current edited protobuf">
         </command>
      </menuContribution>
	<menuContribution
            allPopups="true"
            locationURI="toolbar:protodebugger.views.ProtoCacheViewer">
         <command
               commandId="protodebugger.commands.Save"
               id="protodebugger.views.ProtoViewer.Toolbar.Save"
               label="Save"
               style="push"
               tooltip="Saves Proto Files">
         </command>
         <command
               commandId="protodebugger.commands.Load"
               id="protodebugger.views.ProtoViewer.Toolbar.Load"
               label="Load"
               style="push"
               tooltip="Loads Proto Files">
         </command>
         <command
               commandId="protodebugger.commands.NewProtoPackage"
               label="New"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="protodebugger.commands.Build"
            id="protodebugger.commands.Build"
            name="Build">
      </command>
      <command
            defaultHandler="protodebugger.commands.Save"
            id="protodebugger.commands.Save"
            name="Save">
      </command>
      <command
            defaultHandler="protodebugger.commands.Load"
            id="protodebugger.commands.Load"
            name="Load">
      </command>
      <command
            defaultHandler="protodebugger.commands.NewProtoPkg"
            description="New ProtoPackage"
            id="protodebugger.commands.NewProtoPackage"
            name="NewProtoPkgCmd">
      </command>
      <command
            defaultHandler="protodebugger.commands.SaveProtoInstance"
            id="protodebugger.commands.SaveProtoInstance"
            name="SaveProtoInstance">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="protodebugger.views.ProtoPerspective"
            id="ProtoDebugger.perspective"
            name="ProtoDebugger">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            name="ProtoDebugger">
         <property
               name="appName"
               value="ProtoDebugger">
         </property>
      </product>
   </extension>

</plugin>

